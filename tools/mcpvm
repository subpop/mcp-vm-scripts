#!/bin/bash

set -e

# Bootstrap - determine script directory and source libraries
# Resolve symlinks to find the actual script location
SCRIPT_PATH="$(readlink -f "${BASH_SOURCE[0]}")"
SCRIPT_DIR="$(dirname "$SCRIPT_PATH")"
# shellcheck source=lib/common.sh
source "$SCRIPT_DIR/lib/common.sh"
# shellcheck source=lib/cloudinit.sh
source "$SCRIPT_DIR/lib/cloudinit.sh"

# Platform detection and load platform-specific implementation
PLATFORM="$(uname -s)"
case "$PLATFORM" in
    Linux)
        source "$SCRIPT_DIR/lib/platform-libvirt.sh"
        ;;
    Darwin)
        source "$SCRIPT_DIR/lib/platform-vfkit.sh"
        ;;
    *)
        error "Unsupported platform: $PLATFORM"
        ;;
esac

# Show usage information
usage() {
    cat <<EOF
Usage: mcpvm <command> [options]

Commands:
  setup   Create and start a new RHEL VM
  list    List all mcpvm-managed VMs
  start   Start an existing VM
  stop    Stop a running VM
  delete  Delete a VM and its resources

Run 'mcpvm <command> --help' for command-specific help.
EOF
    exit 1
}

# Setup command - create and start a new VM
cmd_setup() {
    # Parse arguments
    VERSION=""
    VM_NAME=""
    PLAYBOOK=""

    while [[ $# -gt 0 ]]; do
        case $1 in
            --help|-h)
                cat <<EOF
Usage: mcpvm setup --version=<RHEL-VERSION> [--playbook=<PATH>] [NAME]

Create and start a new RHEL VM.

Options:
  --version=X.Y       RHEL version (e.g., 9.5)
  --playbook=<PATH>   Run an Ansible playbook after VM is ready
  [NAME]              Optional VM name (must start with 'mcpvm-'). If not
                      provided, a random name will be generated
                      (mcpvm-<adjective>-<utensil>)

Examples:
  mcpvm setup --version=9.5                           # Auto-generate name
  mcpvm setup --version=9.5 mcpvm-my-test             # Use specific name
  mcpvm setup --version=9.5 --playbook=configure.yml  # Run playbook after setup
EOF
                exit 0
                ;;
            --version=*)
                VERSION="${1#*=}"
                shift
                ;;
            --version)
                VERSION="$2"
                shift 2
                ;;
            --playbook=*)
                PLAYBOOK="${1#*=}"
                shift
                ;;
            --playbook)
                PLAYBOOK="$2"
                shift 2
                ;;
            *)
                if [[ -z "$VM_NAME" ]]; then
                    VM_NAME="$1"
                else
                    error "Unknown argument: $1"
                fi
                shift
                ;;
        esac
    done

    if [[ -z "$VERSION" ]]; then
        error "Usage: mcpvm setup --version=<RHEL-MAJOR>.<RHEL-MINOR> [NAME]"
    fi

    # Validate version format
    validate_version_format "$VERSION"

    # Generate VM name if not provided
    if [[ -z "$VM_NAME" ]]; then
        VM_NAME=$(generate_vm_name)
        info "Generated VM name: $VM_NAME"
    else
        validate_vm_name "$VM_NAME"
    fi

    local backend
    if [[ "$PLATFORM" == "Linux" ]]; then
        backend="libvirt"
    else
        backend="vfkit"
    fi
    info "Setting up VM: $VM_NAME with RHEL $VERSION ($backend)"

    # Check prerequisites (platform-specific)
    platform_check_prerequisites

    # Load configuration
    load_config

    # Get SSH key
    get_ssh_key

    # Validate base image exists (platform-specific)
    platform_validate_base_image "$VERSION"

    # Check if VM already exists (platform-specific)
    platform_check_vm_exists "$VM_NAME"

    # Create cloud-init ISO in permanent location
    CLOUDINIT_ISO=$(get_cloudinit_iso_path "$VM_NAME")
    create_cloudinit_iso "$VM_NAME" "$USER" "$SSH_KEY_CONTENT" "$REDHAT_ORG_ID" "$REDHAT_ACTIVATION_KEY" "$CLOUDINIT_ISO"

    # Create VM (platform-specific)
    platform_create_vm "$VM_NAME" "$VERSION" "$BASE_IMAGE" "$CLOUDINIT_ISO"

    # Get VM IP address (platform-specific)
    VM_IP=$(platform_get_vm_ip "$VM_NAME" 30 2)

    # Wait for SSH and add host keys to known_hosts
    VM_HOSTNAME="$VM_NAME.local"
    if [[ -n "$VM_IP" ]]; then
        if wait_for_ssh_and_add_known_host "$VM_IP" "$VM_HOSTNAME" 30 2; then
            info "SSH host keys configured - you can connect immediately"
        else
            warn "Could not automatically configure SSH host keys"
        fi
    else
        warn "Could not determine VM IP address"
        warn "You may need to wait for the VM to boot and configure SSH manually"
    fi

    # Run Ansible playbook if specified
    if [[ -n "$PLAYBOOK" ]]; then
        info ""
        info "Waiting for cloud-init to complete before running playbook..."
        wait_for_hostname_resolution "$VM_HOSTNAME" 60 5
        run_ansible_playbook "$VM_HOSTNAME" "$PLAYBOOK" "$USER"
    fi

    # Display VM information and management commands
    info ""
    info "VM '$VM_NAME' is ready!"
    info "Connect with: ssh $USER@$VM_HOSTNAME"
    info ""
    info "Manage this VM with:"
    info "  mcpvm list              # List all VMs"
    info "  mcpvm stop $VM_NAME     # Stop the VM"
    info "  mcpvm start $VM_NAME    # Start the VM"
    info "  mcpvm delete $VM_NAME   # Delete the VM"
}

# List command - list all mcpvm-managed VMs
cmd_list() {
    local name_only=false

    while [[ $# -gt 0 ]]; do
        case $1 in
            --help|-h)
                cat <<EOF
Usage: mcpvm list [--name-only]

List all mcpvm-managed VMs and their status.

Options:
  --name-only    Output only VM names, one per line (for scripting/completion)
EOF
                exit 0
                ;;
            --name-only)
                name_only=true
                shift
                ;;
            *)
                error "Unknown argument: $1"
                ;;
        esac
    done

    local vms
    vms=$(platform_list_vms)
    if [[ -z "$vms" ]]; then
        if [[ "$name_only" != true ]]; then
            info "No mcpvm-managed VMs found"
        fi
    else
        if [[ "$name_only" == true ]]; then
            echo "$vms" | while read -r name state; do
                echo "$name"
            done
        else
            printf "%-30s %s\n" "NAME" "STATE"
            printf "%-30s %s\n" "----" "-----"
            echo "$vms" | while read -r name state; do
                printf "%-30s %s\n" "$name" "$state"
            done
        fi
    fi
}

# Start command - start an existing VM
cmd_start() {
    local vm_name=""

    while [[ $# -gt 0 ]]; do
        case $1 in
            --help|-h)
                cat <<EOF
Usage: mcpvm start <NAME>

Start an existing VM.

Arguments:
  <NAME>    VM name (must start with 'mcpvm-')
EOF
                exit 0
                ;;
            *)
                if [[ -z "$vm_name" ]]; then
                    vm_name="$1"
                else
                    error "Unknown argument: $1"
                fi
                shift
                ;;
        esac
    done

    if [[ -z "$vm_name" ]]; then
        error "Usage: mcpvm start <NAME>"
    fi

    validate_vm_name "$vm_name"
    platform_start_vm "$vm_name"
}

# Stop command - stop a running VM
cmd_stop() {
    local vm_name=""

    while [[ $# -gt 0 ]]; do
        case $1 in
            --help|-h)
                cat <<EOF
Usage: mcpvm stop <NAME>

Stop a running VM.

Arguments:
  <NAME>    VM name (must start with 'mcpvm-')
EOF
                exit 0
                ;;
            *)
                if [[ -z "$vm_name" ]]; then
                    vm_name="$1"
                else
                    error "Unknown argument: $1"
                fi
                shift
                ;;
        esac
    done

    if [[ -z "$vm_name" ]]; then
        error "Usage: mcpvm stop <NAME>"
    fi

    validate_vm_name "$vm_name"
    platform_stop_vm "$vm_name"
}

# Delete command - delete a VM
cmd_delete() {
    local vm_name=""

    while [[ $# -gt 0 ]]; do
        case $1 in
            --help|-h)
                cat <<EOF
Usage: mcpvm delete <NAME>

Delete a VM and all its resources.

Arguments:
  <NAME>    VM name (must start with 'mcpvm-')
EOF
                exit 0
                ;;
            *)
                if [[ -z "$vm_name" ]]; then
                    vm_name="$1"
                else
                    error "Unknown argument: $1"
                fi
                shift
                ;;
        esac
    done

    if [[ -z "$vm_name" ]]; then
        error "Usage: mcpvm delete <NAME>"
    fi

    validate_vm_name "$vm_name"
    platform_delete_vm "$vm_name"
}

# Main command dispatch
if [[ $# -eq 0 ]]; then
    usage
fi

COMMAND="$1"
shift

case "$COMMAND" in
    setup)
        cmd_setup "$@"
        ;;
    list)
        cmd_list "$@"
        ;;
    start)
        cmd_start "$@"
        ;;
    stop)
        cmd_stop "$@"
        ;;
    delete)
        cmd_delete "$@"
        ;;
    --help|-h)
        usage
        ;;
    *)
        error "Unknown command: $COMMAND\nRun 'mcpvm --help' for usage."
        ;;
esac
